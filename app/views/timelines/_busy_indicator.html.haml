%div.row.well.center{ :id => "busy_indicator"}
  %img{ :src => "/assets/ajax-loader-white-blue.gif",  :alt => "Loading"}
  %h4 #{given_message}
  
:javascript
  $(document).ready(function() {
    central();
  });
  function central() 
  {
      var width = ($(window).width() - $('#busy_indicator').width()) / 2;
      var height = ($(window).height() - $('#busy_indicator').height()) / 2;

      $('#busy_indicator').css({'position' : 'absolute' , 'left' : width + 'px', 'top' : height + 'px'});
  }  