%div.container
  /%div.mainmessage
  /  /%div.hero-unit.mainbox1.span3.border
  /  /  %h1 #{PRODUCT_DISPLAY_NAME}
  /  /  %h2 #{PRODUCT_TAG_LINE}
  /  /%div.span3.mainbox2.well.border
  /  /  %h2
  /  /    %a{:href => showcase_path} Check out
  /  /    timelines from the showcase
  /  /  %h2
  /  /    %a{:href => new_timeline_path} Create 
  /  /    your own timelines and share
  /  /  %h2
  /  /    Visit our 
  /  /    %a{:href => faq_path}FAQ 
  /  /    for more info
      
  /  /%div.span3.featured_title
  /  /  %h3 Featured Timelines
  
  %div
    %div.well.hpmaindiv
      %div.lhsmsg
        %h1 Looking for timelines?  
      %div.offset3.actionmessages
        %h3
          %b
            #{PRODUCT_DISPLAY_NAME} 
          enables easy creation and quick sharing of timelines.
        %div.extrapoints
          %h3
            %i.icon-ok.icon-white.pull-left
            &nbsp;&nbsp;Visit our 
            %b
              %a{:href => showcase_path} showcase
            for sample timelines.
          %h3
            %i.icon-ok.icon-white.pull-left
            &nbsp;
            %b
              %a{:href => new_timeline_path} Create 
            your own timelines and share.
          %h3
            %i.icon-ok.icon-white.pull-left
            &nbsp;&nbsp;Refer to the
            %b  
              %a{:href => faq_path}FAQ 
            for more information.
  
  /%hr.onhomepage
  
  %div.row
    %div.span12.featured_title
      %h3 Featured Timelines
    %div.span12.featured
      - if @featuted_timelines == nil
        %h1 Please set featured timelines in database.
      - else
        = render :partial => "tl_small_block", :locals => {:selected_timelines => @featuted_timelines, :div_id_prefix => 1}
