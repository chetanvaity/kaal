/ This is to disp[lay modal popup on demand. 
%div{:class => "modal hide", :id => "modal-popup"}
  %div{:class => "modal-header"}
    %button{:type => "button", :class => "close", "data-dismiss" => "modal"}Ã—
    %strong Copy following html embed code and use on intended webpage
  %div{:class => "modal-body"}
    /Here we are going to generate the embed code by doing lot of haml tricks
    /We need something like "<iframe src="http://localhost:3000/events/q/v2?embview=true&tags=#{@tags}&tlid=#{@tlid}" frameborder="yes" scrolling="no" width="78%" height="480">Test</iframe>" 
    /with variables evaluated in side.
    = succeed ('" frameborder="yes" scrolling="no" width="78%" height="480">Test</iframe>') do
      = succeed(@tlid) do
        = succeed('&tlid=') do
          = succeed(@tags) do
            = escape_once('<iframe src="http://localhost:3000/events/q/v2?embview=true&tags=')
    = escape_once(haml_indent())
    /- haml_concat('<iframe src="http://localhost:3000/events/q/v2?embview=true&tags=')
    /- haml_concat(@tags)
    /- haml_concat('&tlid=')
    /- haml_concat(@tlid)
    /- haml_concat('" frameborder="yes" scrolling="no" width="78%" height="480">Test</iframe>')
    /= escape_once(haml_indent())
    /= escape_once('<iframe src="http://localhost:3000/events/q/v2?embview=true&tags=#{@tags}&tlid=#{@tlid}" frameborder="yes" scrolling="no" width="78%" height="480">Test</iframe>')
    /!= "<iframe src=\"http://localhost:3000/events/q/v2?embview=true&tags=#{@tags}&tlid=#{@tlid}\" frameborder=\"yes\" scrolling=\"no\" width=\"78%\" height=\"480\">Test</iframe>"

%div
  /%div.row
  /  %div.span12.border
  %div#status-line.pull-right
    - if (@fromdate.nil? or @fromdate.empty?) and (@todate.nil? or @todate.empty?)
      &nbsp;&nbsp;&nbsp;&nbsp;#{@events_size} events for tags: #{@tags} &nbsp; 
    - else
      &nbsp;&nbsp;&nbsp;&nbsp;#{@events_size} events between [#{@fromdate} - #{@todate}] for tags: #{@tags} &nbsp; 
     
  -if @events_size > 0
    -if @embeddedview == 'false'
      %div.pull-right
        %a.btn.btn-primary{:href => "#modal-popup", "data-toggle" => "modal", :title => "Get html embed code", :rel => "tooltip"}
          %i.icon-share.icon-white
        -if @viewstyle == "tl"
          %a.btn.btn-primary{:href => "/events/q/v2?fullscr=false&view=tl&tags=#{@tags}&tlid=#{@tlid}", :title => "Normal screen view", :rel => "tooltip", :style => "margin-right:10px;"}
            %i.icon-resize-small.icon-white
        -else 
          %a.btn.btn-primary{:href => "/events/q/v2?fullscr=false&view=list&tags=#{@tags}&tlid=#{@tlid}", :title => "Normal screen view", :rel => "tooltip", :style => "margin-right:10px;"}
            %i.icon-resize-small.icon-white
                
      %ul.nav.nav-tabs.no-bottom-margin
        -if @viewstyle == "tl"
          %li.active
            %a{:href => "/events/q/v2?fullscr=true&view=tl&tags=#{@tags}&tlid=#{@tlid}"} 
              %i.icon-time
              Timeline View
          %li
            %a{:href => "/events/q/v2?fullscr=true&view=list&tags=#{@tags}&tlid=#{@tlid}"} 
              %i.icon-list-alt
              List View
        -else
          %li
            %a{:href => "/events/q/v2?fullscr=true&view=tl&tags=#{@tags}&tlid=#{@tlid}"} 
              %i.icon-time
              Timeline View
          %li.active
            %a{:href => "/events/q/v2?fullscr=true&view=list&tags=#{@tags}&tlid=#{@tlid}"}
              %i.icon-list-alt 
              List View
    -if @viewstyle == "list"
      = render 'elistview'

