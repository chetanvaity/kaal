%h2 Edit Event

= form_for(@event) do |f|

  = label :event, :title, 'Title'
  = text_field :event, :title

  = label :event, :date, 'Date'
  = text_field :event, :jd

  %h4 Tags
  %div.items
    = f.nested_fields_for :tags do |f|
      %fieldset.item{:style => "float:left"}
        = f.text_field :name
        %a.remove{:href => "#"} x      
        = f.hidden_field :id
        = f.hidden_field :_destroy
      
      
  %a.add{:href => "#"} Add tag
 
  = submit_tag 'Save Changes'
