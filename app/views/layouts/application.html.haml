!!! 5
%html
  %head
    %meta{:charset => "utf-8"}
    %title Events
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    - if flash[:notice]
      %p= flash[:notice]
    - elsif flash[:warning]
      %p= flash[:warning]
      
    <!-- This is standard header added to the page -->
    = render 'layouts/header'
    %div{:class => "container"}
      = yield
    = render 'layouts/footer'
    
