        %a{:href => "/auth/google"} With Google
      %div.span4
        = link_to "/auth/facebook" do 
          = image_tag("facebook_64.png",:size => "64x64", :alt => "facebook")
        %br  
        %a{:href => "/auth/facebook"} With Facebook

