/
/ This is to display modal popup on demand. Used when clicked on 'edit' link in listview
/
%div.modal.hide#modal-signin
  %div.modal-header
    %button.close{:type => "button", "data-dismiss" => "modal"}Ã—
    %h3 Login to Pollengrain
  %div.modal-body
    %div.span2.well
      %a.button{:href => "/auth/google"}
        %div
          = image_tag("google_64.png", :size => "64x64", :alt => "Google")
        %div
          %strong Login with Google
    %div.span2.well
      %a.button{:href => "/auth/facebook"}
        %div
          = image_tag("facebook_64.png",:size => "64x64", :alt => "Facebook")
        %div
          %strong Login with Facebook

